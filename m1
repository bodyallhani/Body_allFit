  <script>
    // 기존 바디올핏 설문에서 쓰던 Web App URL 그대로 사용
    const SCRIPT_URL = "https://script.google.com/macros/s/AKfycby-Zg2W8Fa5wab-W8lbR4SMSaxqjgrfKFyk1D4O-LWWXaAh_FAYkdTLaczuNmdcFiiT/exec";
    const KAKAO_URL = "https://pf.kakao.com/_wdtXK/chat";

    document.getElementById("leadForm").addEventListener("submit", function (e) {
      e.preventDefault();

      const name = document.getElementById("name").value.trim();
      const phone = document.getElementById("phone").value.trim();
      const referrer = document.getElementById("referrer").value.trim();
      const memo = document.getElementById("memo").value.trim();
      const consentChecked = document.getElementById("consent").checked;

      if (!name) {
        alert("이름을 입력해주세요.");
        return;
      }
      if (!phone) {
        alert("연락처를 입력해주세요.");
        return;
      }
      if (!consentChecked) {
        alert("개인정보 수집·이용에 동의해주셔야 합니다.");
        return;
      }

      const btn = document.getElementById("submitBtn");
      btn.disabled = true;
      btn.textContent = "전송 중...";

      const formData = new FormData();
      formData.append("name", name);
      formData.append("phone", phone);
      formData.append("referrer", referrer);
      formData.append("memo", memo);
      formData.append("consent", "동의함");
      formData.append("formType", "1차");

      fetch(SCRIPT_URL, {
        method: "POST",
        body: formData,
        mode: "no-cors"
      }).catch(function (err) {
        console.error("1차 문진 전송 오류(전송은 시도됨):", err);
      }).finally(function () {
        alert(
          "1차 문진이 전달되었습니다.\n\n지금 뜨는 카카오 채널에서\n채팅창에 꼭 '바디올핏'이라고 한 번만 보내주세요.\n그 다음 2차 문진 링크와 상담 안내를 드립니다."
        );
        window.location.href = KAKAO_URL;
      });
    });
  </script>
